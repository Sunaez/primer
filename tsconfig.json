{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./", // Ensure the base URL is set to the root of the project
    "paths": {
      "@/*": ["./*"], // Leave this for general imports
      "@/games/*": ["./app/games/*"] // Add this to point @/games to the games folder
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
